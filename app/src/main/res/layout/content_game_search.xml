<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dmytryk.lolgoal.Activities.GameSearchActivity"
    tools:showIn="@layout/activity_game_search">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm_. "
            android:id="@+id/et_summoner_name"
            android:hint="@string/summoner_name" />

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_server_options"
            android:layout_width="368dp"
            android:entries="@array/spinner_server_options"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="46dp" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search"
            android:text="@string/search"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search_statistics"
            android:text="@string/search_statistics"/>

        <TextView
            android:id="@+id/tv_tmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temporary_result_container" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
